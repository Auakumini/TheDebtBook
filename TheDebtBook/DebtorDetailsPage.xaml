<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:TheDebtBook.ViewModels"
             x:Class="TheDebtBook.DebtorDetailsPage">

    <StackLayout Padding="20">
        <Label Text="Transactions:" FontAttributes="Bold" />

        <ListView ItemsSource="{Binding DebtTransactionsList}">
            <!-- Adjusted the binding path here -->
            <!-- Define the appearance of each item in the list -->
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell Text="{Binding DebtTransactionDescription}" Detail="{Binding DebtTransactionAmount}" />
                    <!-- Adjusted the binding paths here -->
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <Label Text="Add New Transaction:" Margin="0,20,0,0" />
        <Entry Placeholder="Transaction description" Text="{Binding NewDebtTransactionDescription}" />
        <!-- Adjusted the binding path here -->
        <Entry Placeholder="Transaction amount" Text="{Binding NewDebtTransactionAmount}" Keyboard="Numeric" />
        <!-- Adjusted the binding path here -->

        <Button Text="Add Transaction" Command="{Binding AddDebtTransactionCommand}" Margin="0,20,0,0" />
        <!-- Adjusted the binding path here -->
    </StackLayout>

</ContentPage>