<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:TheDebtBook.ViewModels"
             x:Class="TheDebtBook.AddDebtorPage">
    <ContentPage.BindingContext>
        <viewmodels:AddDebtorViewModel />
    </ContentPage.BindingContext>

    <StackLayout Padding="20">
        <Label Text="Debtor Name:" />
        <Entry Placeholder="Enter debtor's name" Text="{Binding DebtorName}" />

        <Label Text="Initial Amount Owed:" Margin="0,10,0,0" />
        <Entry Placeholder="Enter amount" Text="{Binding AmountOwed}" Keyboard="Numeric" />

        <Button Text="Add Debtor" Command="{Binding AddDebtorCommand}" Margin="0,20,0,0" />
    </StackLayout>

</ContentPage>
